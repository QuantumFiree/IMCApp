<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#C0CECF"
    tools:context=".IMCCalculo">


    <TextView
        android:id="@+id/textMCI"
        android:layout_width="217dp"
        android:layout_height="124dp"
        android:text="0"
        android:background="#BE3D3D"
        android:gravity="center"
        android:textSize="40sp"
        android:fontFamily="sans-serif-black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.337" />

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Calcular"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.891" />

    <EditText
        android:id="@+id/inputWeight"
        android:layout_width="261dp"
        android:layout_height="51dp"
        android:layout_marginTop="75dp"
        android:background="#C69898"
        android:gravity="center"
        android:text="Peso (Kilogramos):"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.58" />

    <EditText
        android:id="@+id/inputHeight"
        android:layout_width="261dp"
        android:layout_height="51dp"
        android:background="#C69898"
        android:gravity="center"
        android:text="Altura (Metros)"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/inputWeight"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/inputWeight"
        app:layout_constraintTop_toBottomOf="@+id/inputWeight"
        app:layout_constraintVertical_bias="0.13" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="190dp"
        android:layout_height="45dp"
        android:text="Calculo de IMC"
        android:textSize="20sp"
        android:gravity="center"
        android:fontFamily="sans-serif-black"
        android:textColor="#ffff"
        android:background="#C69898"
        tools:layout_editor_absoluteX="110dp"
        tools:layout_editor_absoluteY="65dp" />

</androidx.constraintlayout.widget.ConstraintLayout>